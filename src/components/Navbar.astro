<button class="scroll__top scroll-to-target" data-target="html">
  <i class="tg-flaticon-arrowhead-up"></i>
</button>
<!-- Scroll-top-end-->
<div id="header-fixed-height"></div>
<div id="sticky-header" class="tg-header__area tg-header__style-three">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="tgmenu__wrap">
          <nav class="tgmenu__nav">
            <div class="logo">
              <a href="/">
                <img src="/img/TNC-logo.png" alt="Logo" style="width: 60px;" />
              </a>
            </div>
            <div class="tgmenu__navbar-wrap tgmenu__main-menu d-none d-xl-flex">
              <ul class="navigation">
                {
                  pages.map((page) => (
                    <li
                      class={`${
                        currentPath === page.path ? "active" : ""
                      } ${hasSubMenu(page.name) ? "menu-item-has-children" : ""}`}
                    >
                      <a href={page.path}>{page.name}</a>
                      {hasSubMenu(page.name) && (
                        <ul class="sub-menu">
                          {subMenuItems[page.name]?.map((subItem) => (
                            <li
                              class={`${
                                currentPath === subItem.path ? "active" : ""
                              }`}
                            >
                              <a href={subItem.path}>{subItem.name}</a>
                            </li>
                          ))}
                        </ul>
                      )}
                    </li>
                  ))
                }
              </ul>
            </div>
            <div class="tgmenu__action">
              <ul class="list-wrap">
                <li class="header-btn login-btn">
                  <a href="#">NORCET 8.0</a>
                </li>
              </ul>
            </div>
            <div class="mobile-nav-toggler">
              <i class="tg-flaticon-menu-1"></i>
            </div>
          </nav>
