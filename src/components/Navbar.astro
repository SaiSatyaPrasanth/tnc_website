---
const pages = [
  { name: "Home", path: "/" },
  { name: "About", path: "/about-us/" },
  { name: "Courses", path: "/courses/" },
  { name: "Achievements", path: "/achievements/" },
  { name: "Blogs", path: "/blogs/" },
  { name: "Exams", path: "/exam-details/" },
  { name: "Previous Year MCQ", path: "/previous-year-mcq/" },
  { name: "Contact", path: "/contact/" },
];

const currentPath = Astro.url.pathname;

const hasSubMenu = (name) => name === "Exams"; // Example: Check if submenu exists
const subMenuItems = {
  Exams: [
    { name: "AIIMS NORCET", path: "/exam-details" },
    { name: "Nursing Officer Exams", path: "/exam-details" },
    { name: "CHO", path: "/exam-details" },
  ],
};
